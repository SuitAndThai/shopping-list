<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:orientation="vertical" >
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="List Name"
            android:id="@+id/list_name_textView" android:layout_gravity="center"/>

    <fragment
            android:id="@+id/item_fragment"
            android:name="com.example.shopping_list.MyListFragments"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            />
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add an item.."
            android:id="@+id/add_an_item_editText" android:layout_gravity="center"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add"
            android:id="@+id/add_an_item_button" android:layout_gravity="center"
            android:onClick="onClickAddAnItem"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Look up recipes"
            android:id="@+id/look_up_recipes_button" android:layout_gravity="center"
            android:onClick="onClickLookUpRecipes"/>


</LinearLayout>